<div class="small-container center-block">
    <h1> <%=@article.title%></h1>
    <div>
        <p>Escrito por: <strong> <%= @article.user.email%> </strong> </p>
        <% if current_user.avatar.attached?%>
        <%= image_tag url_for(current_user.avatar),height:40%>
        <%end%>
    </div>

    <div>
        <%= @article.content%>
    </div>
    <div class="margin_top">
        <p class="label">Tags</p>
        <% @article.categories.each do |category| %>
            <span class="badge badge-pill badge-primary" style="background-color:<%=category.color %>">
                <%= link_to category.title,category, class:"text-white"%>
            </span>
            
        <%end%>
    </div>
    <div>
        <%= link_to "Editar el articulo", edit_article_path , method: :get%>
        <%= link_to "Eliminar el artÃ­culo", @article, method: :delete%>
    </div>
</div>